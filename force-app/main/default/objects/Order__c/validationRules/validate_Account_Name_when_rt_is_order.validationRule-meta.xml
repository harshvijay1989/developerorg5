<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>validate_Account_Name_when_rt_is_order</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
     RecordType.Name = &apos;Order&apos;,
    ISBLANK( AccountId__c )
)</errorConditionFormula>
    <errorMessage>Enter Account Name</errorMessage>
</ValidationRule>
