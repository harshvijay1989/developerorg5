<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Invoice_Field_Required_On_StatusDelivery</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL( Status__c , &quot;Delivery&quot;),
 Invoice_Generated__c = false
)</errorConditionFormula>
    <errorMessage>Please Send an invoice before proceeding with Delivery.</errorMessage>
</ValidationRule>
