<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>validate_primary_contact_when_RT_is_Op</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    RecordType.Name = &apos;Opportunity&apos;,
    ISBLANK( Primary_contact__c )
)</errorConditionFormula>
    <errorDisplayField>Primary_contact__c</errorDisplayField>
    <errorMessage>Enter Primary  Contact</errorMessage>
</ValidationRule>
